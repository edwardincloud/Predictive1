{
  "testingValidation": {
    "testingFeasibility": {
      "criteria": {
        "changeType": {
          "standard": true,
          "normal": true,
          "emergency": false
        },
        "requiredFields": [
          "testEnvironment",
          "testPlan",
          "testCases"
        ]
      },
      "outcomes": {
        "feasible": {
          "testResults": {
            "passed": {
              "riskAdjustment": "decrease",
              "signal": "green",
              "recommendations": [
                "Proceed with implementation",
                "Document test results",
                "Monitor post-deployment"
              ]
            },
            "failed": {
              "riskAdjustment": "increase",
              "signal": "red",
              "recommendations": [
                "Address test failures",
                "Retest after fixes",
                "Update implementation plan"
              ]
            }
          }
        },
        "notFeasible": {
          "mitigationStrategies": {
            "backoutPlan": {
              "required": true,
              "components": [
                "rollbackSteps",
                "verificationChecks",
                "timeEstimates"
              ]
            },
            "outcomes": {
              "withMitigation": {
                "riskAdjustment": "maintain",
                "requiresJustification": true,
                "recommendations": [
                  "Review backout plan",
                  "Schedule additional support",
                  "Prepare for immediate rollback"
                ]
              },
              "withoutMitigation": {
                "riskAdjustment": "increase",
                "signal": "high",
                "recommendations": [
                  "Develop backout plan",
                  "Seek additional approvals",
                  "Consider alternative approaches"
                ]
              }
            }
          }
        }
      }
    },
    "riskLevels": {
      "low": {
        "score": 1,
        "requiresEvidence": true,
        "allowedConditions": [
          "allTestsPassed",
          "noHistoricalIncidents",
          "robustMitigation"
        ]
      },
      "medium": {
        "score": 2,
        "requiresEvidence": true,
        "allowedConditions": [
          "minorTestIssues",
          "resolvedHistoricalIncidents",
          "partialMitigation"
        ]
      },
      "high": {
        "score": 3,
        "requiresEvidence": true,
        "allowedConditions": [
          "testsFailed",
          "unresolvableIssues",
          "noMitigation"
        ]
      }
    }
  }
}